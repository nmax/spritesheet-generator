$__{{spritesheet_name}}: (
  {{#each sprites~}}
    {{name}}: (
      width: {{bounds.width}}px,
      height: {{bounds.height}}px,
      x: -{{bounds.x}}px,
      y: -{{bounds.y}}px
    ),
  {{/each~}}
);

@mixin {{spritesheet_name}}-sprite($sprite) {
  background-image: url(<%= asset_path('{{spritesheet_name}}.png') %>);
  $__sprite: map-get($__{{spritesheet_name}}, $sprite);
  width: map-get($__sprite, width);
  height: map-get($__sprite, width);

  background-position: map-get($__sprite, x), map-get($__sprite, y);
}

$__{{spritesheet_name}}: (
  {{#each sprites~}}
    {{name}}: (
      width: {{bounds.width}}px,
      height: {{bounds.height}}px,
      x: -{{bounds.x}}px,
      y: -{{bounds.y}}px
    ),
  {{/each~}}
);

@function {{spritesheet_name}}_sprite_height($sprite) {
  $__sprite: map-get($__{{spritesheet_name}}, $sprite);
  @return map-get($__sprite, height);
}

@function {{spritesheet_name}}_sprite_width($sprite) {
  $__sprite: map-get($__{{spritesheet_name}}, $sprite);
  @return map-get($__sprite, width);
}

@mixin {{spritesheet_name}}_sprite($sprite) {
  background-image: image_url('{{image_path}}');
  $__sprite: map-get($__{{spritesheet_name}}, $sprite);
  width: {{spritesheet_name}}_sprite_width($sprite);
  height: {{spritesheet_name}}_sprite_height($sprite);

  background-position: map-get($__sprite, x) map-get($__sprite, y);
}


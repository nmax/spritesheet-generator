$__{{spritesheet_name}}: (
  {{#each sprites~}}
    {{name}}: (
      width: {{bounds.width}}px,
      height: {{bounds.height}}px,
      x: -{{bounds.x}}px,
      y: -{{bounds.y}}px
    ),
  {{/each~}}
);

// TODO: @function um ein Sprite aus der Map zu holen.
@mixin {{spritesheet_name}}_sprite($sprite) {
  background-image: image_url('{{image_path}}');
  $__sprite: map-get($__{{spritesheet_name}}, $sprite);
  width: map-get($__sprite, width);
  height: map-get($__sprite, height);

  background-position: map-get($__sprite, x) map-get($__sprite, y);
}

@mixin {{spritesheet_name}}_sprite_height($sprite) {
  $__sprite: map-get($__{{spritesheet_name}}, $sprite);
  height: map-get($__sprite, height);
}

@mixin {{spritesheet_name}}_sprite_width($sprite) {
  $__sprite: map-get($__{{spritesheet_name}}, $sprite);
  width: map-get($__sprite, width);
}
